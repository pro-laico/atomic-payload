{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "baseUrl": ".",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./src/*"],
      "react": ["./node_modules/@types/react"],
      "@payload-config": ["./src/payload.config.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "tailwind.config.js", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
